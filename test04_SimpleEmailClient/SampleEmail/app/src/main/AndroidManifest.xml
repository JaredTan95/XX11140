<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.tanjianff.sampleemail">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/email"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ValidationActivity">
        </activity>
        <activity android:name=".MailboxPageActivity">
        </activity>
        <activity
            android:name=".MailBoxPageActivity"
            android:label="@string/title_activity_mail_box_page"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
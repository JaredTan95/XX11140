<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cn.tanjianff.test2.MainActivity">

    <!--计算输入框-->
    <TextView
        android:id="@+id/showWindow"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/background_dark"
        android:text="0"
        android:gravity="right"
        android:textColor="@color/colorWhite"
        android:textSize="60sp"/>

    <!--键盘按扭区-->
    <GridLayout
        android:id="@+id/gly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="5"
        android:background="@color/colorBtnBorder">
        <Button
            android:id="@+id/binary"
            style="@style/BtnStyle_land"
            android:text="bin"/>
        <Button
            android:id="@+id/clearAll"
            style="@style/BtnStyle_land"
            android:text="@string/btn_ac"/>
        <Button
            android:id="@+id/btn_cleanone"
            style="@style/BtnStyle_land"
            android:text="⬅️"/>
        <Button
            android:id="@+id/btn_sq"
            style="@style/BtnStyle_land"
            android:text="@string/btn_sq"/>
        <Button
            android:id="@+id/btn_div"
            style="@style/BtnCalculateStyle_land"
            android:text="@string/btn_div"/>
        <Button
            android:id="@+id/otc"
            style="@style/BtnStyle_land"
            android:text="otc"/>
        <Button
            android:id="@+id/btn_seven"
            style="@style/BtnStyle_land"
            android:text="@string/btn_seven" />
        <Button
            android:id="@+id/btn_eight"
            style="@style/BtnStyle_land"
            android:text="@string/btn_eight" />
        <Button
            android:id="@+id/btn_nine"
            style="@style/BtnStyle_land"
            android:text="@string/btn_nine" />
        <Button
            android:id="@+id/btn_mult"
            style="@style/BtnCalculateStyle_land"
            android:text="@string/btn_mult" />
        <Button
            android:id="@+id/oct"
            style="@style/BtnStyle_land"
            android:text="oct"/>
        <Button
            android:id="@+id/btn_four"
            style="@style/BtnStyle_land"
            android:text="@string/btn_four" />
        <Button
            android:id="@+id/btn_five"
            style="@style/BtnStyle_land"
            android:text="@string/btn_five" />
        <Button
            android:id="@+id/btn_six"
            style="@style/BtnStyle_land"
            android:text="@string/btn_six" />
        <Button
            android:id="@+id/btn_sub"
            style="@style/BtnCalculateStyle_land"
            android:text="@string/btn_sub" />
        <Button
            android:id="@+id/hex"
            style="@style/BtnStyle_land"
            android:text="hex"/>
        <Button
            android:id="@+id/btn_one"
            style="@style/BtnStyle_land"
            android:text="@string/btn_one" />
        <Button
            android:id="@+id/btn_two"
            style="@style/BtnStyle_land"
            android:text="@string/btn_two" />
        <Button
            android:id="@+id/btn_three"
            style="@style/BtnStyle_land"
            android:text="@string/btn_three" />
        <Button
            android:id="@+id/btn_add"
            style="@style/BtnCalculateStyle_land"
            android:text="@string/btn_add" />

        <Button
            android:id="@+id/btn_zero"
            style="@style/BtnStyle_land"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/btn_zero" />
        <Button
            android:id="@+id/btn_dot"
            style="@style/BtnStyle_land"
            android:text="@string/btn_dot" />
        <Button
            android:id="@+id/btn_sum"
            style="@style/BtnCalculateStyle_land"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/btn_sum" />
    </GridLayout>

</LinearLayout>
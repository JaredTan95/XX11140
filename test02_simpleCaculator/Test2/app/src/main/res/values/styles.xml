<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_margin">0.2dp</item>
        <item name="android:background" >@color/colorBtnBackground</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">93dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtnCalculateStyle">
        <item name="android:layout_margin">0.2dp</item>
        <item name="android:background" >@color/colorCalculate</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">93dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
